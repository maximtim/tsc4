(cell) find_branch_by_hash_inner(int hash, cell tree) {
  if (tree.cell_hash() == hash) {
    return tree;
  }
  
  var s = tree.begin_parse();

  repeat (s.slice_refs()) {
    var res = find_branch_by_hash_inner(hash, s~load_ref());
    if (~ res.is_null?()) {
      return res;
    }
  }
  
  return null();
}

(cell) find_branch_by_hash(int hash, cell tree) method_id {
  var branch = find_branch_by_hash_inner(hash, tree);
  return branch.is_null?() ? begin_cell().end_cell() : branch;
}
